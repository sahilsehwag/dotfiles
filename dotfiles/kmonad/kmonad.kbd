  a-homerow-mod (tap-hold-next-release 200 a lsft)
  s-homerow-mod (tap-hold-next-release 200 s lmet)
  d-homerow-mod (tap-hold-next-release 200 d lalt)
  f-homerow-mod (tap-hold-next-release 200 f lctl)
  j-homerow-mod (tap-hold-next-release 200 j rctl)
  k-homerow-mod (tap-hold-next-release 200 k ralt)
  l-homerow-mod (tap-hold-next-release 200 l rmet)
  ;-homerow-mod (tap-hold-next-release 200 ; rsft)
)

(deflayer base
  caps     f1   f2   f3   f4   f5   f6   f7   f8   f9   f10  f11  f12
  grv      1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab      q    w    e    r    t    y    u    i    o    p    [    ]    \
  @esc-ctl a    s    d    f    g    h    j    k    l    ;    '    ret
  lsft     z    x    c    v    b    n    m    ,    .    /    rsft up
  fn       lctl lalt lmet       @spc-sft           rmet ralt left down rght
)

